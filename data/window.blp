using Gtk 4.0;
using Adw 1;

template $Window: Adw.ApplicationWindow {
	title: "Whisker";
	default-width: 600;
	default-height: 400;

	Adw.ToolbarView {
		[top]
		Adw.HeaderBar {}

		content: Box {
			orientation: vertical;
			spacing: 10;

			Entry entry {
				placeholder-text: "Search...";
				primary-icon-name: "system-search-symbolic";
			}

			ScrolledWindow scrolled_window {
				vexpand: true;
				hexpand: true;

				GridView grid_view {
					max-columns: 6;
					enable-rubberband: true;
				}
			}
		};
	}
}
